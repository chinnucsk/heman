#!/bin/bash

VERSION=${1}
MODULES=`ls -1 src/*.erl | awk -F[/.] '{ print "\t\t" $2 }' | sed '$q;s/$/,/g'`

cat > ebin/heman.app << EOF
{application, heman, [
    {description, "Master of the universe."},
    {vsn, "${VERSION}"},
    {modules, [
${MODULES}
    ]},
    {registered, []},
    {mod, {heman, []}},
    {applications, [kernel, stdlib, sasl, crypto, mnesia]},
    {start_phases, [
      {mnesia, []}
    ]}
]}.
EOF

